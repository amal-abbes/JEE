<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
	<persistence-unit name="examen">
	     <provider>oracle.toplink.essentials.PersistenceProvider</provider>
	     <class>com.enit.exam.bibliotheque.entities.Ouvrage</class>
       	 <class>com.enit.exam.bibliotheque.entities.Livre</class>
         <class>com.enit.exam.bibliotheque.entities.Video</class>
         <class>com.enit.exam.bibliotheque.entities.Abonne</class>
	     
	     
			
	 <properties>
         <property name="toplink.logging.level" value="WARNING"/> 
         <property name="toplink.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>  
         <property name="toplink.jdbc.url" value="jdbc:mysql://localhost:3306/examen"/> 
         <property name="toplink.jdbc.user" value="root"/> 
         <property name="toplink.jdbc.password" value="root"/> 
         <property name="toplink.ddl-generation" value="create-tables"/>
    </properties>		
		
		
		
	</persistence-unit>
</persistence>
